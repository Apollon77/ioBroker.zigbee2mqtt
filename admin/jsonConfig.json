{
	"i18n": true,
	"type": "panel",
	"items": {
		"externalMqttServerIP": {
			"type": "text",
			"label": "External MQTT-Server IP-Adress",
			"newLine": true,
			"disabled": "!data.useExternalMqtt"
		},
		"externalMqttServerPort": {
			"type": "number",
			"label": "External MQTT-Server Port",
			"newLine": false,
			"disabled": "!data.useExternalMqtt"
		},
		"useExternalMqtt": {
			"type": "checkbox",
			"label": "Use external MQTT-Server",
			"newLine": true
		},
		"staticText0": {
			"type": "staticText",
			"text": "",
			"newLine": true
		},
		"mqttServerIPBind": {
			"type": "ip",
			"label": "MQTT-Server IP-Adress bind",
			"listenOnAllPorts": true,
			"newLine": true,
			"disabled": "data.useExternalMqtt"
		},
		"mqttServerPort": {
			"type": "number",
			"label": "MQTT-Server Port",
			"newLine": false,
			"disabled": "data.useExternalMqtt"
		},
		"staticText1": {
			"type": "staticText",
			"text": "",
			"newLine": true
		},
		"webUIScheme": {
			"type": "select",
			"options": [
				{
					"label": "HTTP",
					"value": "http"
				},
				{
					"label": "HTTPS",
					"value": "https"
				}
			],
			"newLine": true
		},
		"webUIServer": {
			"type": "text",
			"label": "WebUi Address",
			"newLine": false
		},
		"webUIPort": {
			"type": "number",
			"label": "WebUi Port",
			"newLine": false
		},
		"useKelvin": {
			"type": "checkbox",
			"label": "Use Kelvin instead of mired for the color temps",
			"newLine": true
		},
		"proxyZ2MLogs": {
			"type": "checkbox",
			"label": "Proxy Zigbee2MQTT logs to ioBroker logs",
			"newLine": true
		}
	}
}